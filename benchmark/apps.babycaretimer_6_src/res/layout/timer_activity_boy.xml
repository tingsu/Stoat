<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">
	<LinearLayout
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:orientation="vertical"
    	android:paddingTop="10dip"
    	android:paddingBottom="10dip"
		android:background="@drawable/gradient_blue">
		<Chronometer 
			android:id="@+id/master_chronometer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"/>
		<LinearLayout
			android:id="@+id/diaper_linear_layout"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:focusable="true" 
			android:clickable="true"
			android:hapticFeedbackEnabled="true">	    
			<TextView   
				android:id="@+id/diaper_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black" 
				android:textSize="25dip"
				android:text="" />
			<ImageButton
				android:id="@+id/diaper_button"  
				android:layout_height="wrap_content"
				android:layout_width="60dip"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:background="@drawable/btn_blue"
				android:scaleType="center"
				android:src="@drawable/ic_diaper" />	    
			<TextView   
				android:id="@+id/diaper_alarm_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black"
				android:focusable="true" 
				android:clickable="true" 
				android:gravity="center_vertical|center_horizontal"
				android:textSize="20dip"
				android:text="" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottle_linear_layout"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:focusable="true" 
			android:clickable="true"
			android:hapticFeedbackEnabled="true">	    
			<TextView   
				android:id="@+id/bottle_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black" 
				android:textSize="25dip"
				android:text="" />
			<ImageButton
				android:id="@+id/bottle_button"  
				android:layout_height="wrap_content"
				android:layout_width="60dip"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:background="@drawable/btn_blue"
				android:scaleType="center"
				android:src="@drawable/ic_bottle" />	    
			<TextView   
				android:id="@+id/bottle_alarm_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black"
				android:focusable="true" 
				android:clickable="true" 
				android:gravity="center_vertical|center_horizontal" 
				android:textSize="20dip"
				android:text="" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/sleep_linear_layout"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:focusable="true" 
			android:clickable="true"
			android:hapticFeedbackEnabled="true">	    
			<TextView   
				android:id="@+id/sleep_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black" 
				android:textSize="25dip"
				android:text="" />
			<ImageButton
				android:id="@+id/sleep_button"  
				android:layout_height="wrap_content"
				android:layout_width="60dip"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:background="@drawable/btn_blue"
				android:scaleType="center"
				android:src="@drawable/ic_sleep" />	    
			<TextView   
				android:id="@+id/sleep_alarm_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black"
				android:focusable="true" 
				android:clickable="true"  
				android:gravity="center_vertical|center_horizontal"
				android:textSize="20dip"
				android:text="" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/custom_linear_layout"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:focusable="true" 
			android:clickable="true"
			android:hapticFeedbackEnabled="true">	    
			<TextView   
				android:id="@+id/custom_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black" 
				android:textSize="25dip"
				android:text="" />
			<ImageButton
				android:id="@+id/custom_button"  
				android:layout_height="wrap_content"
				android:layout_width="60dip"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:background="@drawable/btn_blue"
				android:scaleType="center"
				android:src="@drawable/ic_star" />	    
			<TextView   
				android:id="@+id/custom_alarm_text_view"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_marginTop="5dip"
				android:layout_marginBottom="5dip"
				android:layout_marginLeft="10dip"
				android:textColor="@color/black"
				android:focusable="true" 
				android:clickable="true"
				android:gravity="center_vertical|center_horizontal"
				android:textSize="20dip"
				android:text="" />
		</LinearLayout>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:orientation="horizontal"
			android:layout_marginTop="5dip"
			android:layout_marginBottom="5dip"
			android:gravity="center_vertical">
			<TextView   
				android:id="@+id/L_text_view" 
				android:layout_height="wrap_content"
				android:layout_width="30dip"
				android:textColor="@color/black"
				android:textStyle="bold"
				android:clickable="true"
				android:paddingTop="15dip"  
				android:paddingBottom="15dip"
				android:textSize="20dip"
				android:gravity="right"
				android:paddingRight="5dip"
				android:text="L" />
			<SeekBar  
				android:id="@+id/seek_bar" 
				android:layout_height="wrap_content"
				android:layout_width="200dip"
				android:max="1"
				android:padding="15dip"
				style="@style/GreySeekBar" />
			<TextView   
				android:id="@+id/R_text_view" 
				android:layout_height="wrap_content"
				android:layout_width="30dip"
				android:textColor="@color/black"
				android:textStyle="bold"
				android:clickable="true"
				android:paddingTop="15dip"  
				android:paddingBottom="15dip"
				android:textSize="20dip"
				android:gravity="left"
				android:paddingLeft="5dip"
				android:text="R" />
			<ImageView 
				android:layout_height="wrap_content"  
				android:layout_width="wrap_content"
				android:src="@drawable/ic_nursing2" />
		</LinearLayout>
		<ImageView
			android:src="@drawable/divider_black"
			android:layout_height="1dip"  
			android:layout_width="fill_parent"
			android:layout_marginTop="5dip"/>
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="vertical"
			android:gravity="left"
			android:layout_margin="5dip"
			android:background="@drawable/summary_background_blue">
			<TableLayout
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_marginLeft="10dip"
				android:stretchColumns="1">
				<TableRow>
					<TextView 
						android:id="@+id/diaper_total_text_view"  
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:textColor="@color/black"
						android:textStyle="bold" />
					<ImageView 
						android:id="@+id/diaper_total_image_view" 
						android:layout_height="wrap_content"  
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:paddingRight="10dip"
						android:paddingLeft="20dip"
						android:layout_gravity="left"
						android:clickable="true"
						android:src="@drawable/ic_reset_single" />
				</TableRow>
				<TableRow>
					<TextView 
						android:id="@+id/bottle_total_text_view"  
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:paddingTop="5dip"
						android:textColor="@color/black"
						android:textStyle="bold" />
					<ImageView 
						android:id="@+id/bottle_total_image_view"  
						android:layout_height="wrap_content"  
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:paddingRight="10dip"
						android:paddingLeft="20dip"
						android:layout_gravity="left"
						android:clickable="true"
						android:src="@drawable/ic_reset_single" />
				</TableRow>
				<TableRow>
					<TextView 
						android:id="@+id/sleep_total_text_view"  
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:paddingTop="5dip"
						android:textColor="@color/black"
						android:textStyle="bold" />
					<ImageView 
						android:id="@+id/sleep_total_image_view"
						android:layout_height="wrap_content"  
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:paddingRight="10dip"
						android:paddingLeft="20dip"
						android:layout_gravity="left"
						android:clickable="true"
						android:src="@drawable/ic_reset_single" />
				</TableRow>
				<TableRow>
					<TextView 
						android:id="@+id/custom_total_text_view"  
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:paddingTop="5dip"
						android:textColor="@color/black"
						android:textStyle="bold" />
					<ImageView 
						android:id="@+id/custom_total_image_view"
						android:layout_height="wrap_content"  
						android:layout_width="wrap_content"
						android:paddingTop="5dip"
						android:paddingBottom="5dip"
						android:paddingRight="10dip"
						android:paddingLeft="20dip"
						android:layout_gravity="left"
						android:clickable="true"
						android:src="@drawable/ic_reset_single" />
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>