<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/alarm_main_linear_layout"
	android:layout_height="wrap_content"
	android:layout_width="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/background_pink">   
	<Chronometer 
		android:id="@+id/masterChronometer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"/>
	<TextView
		android:id="@+id/alarm_header_text_view" 
		android:layout_height="wrap_content"  
		android:layout_width="fill_parent"
		android:layout_marginTop="10dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:gravity="center_vertical|center_horizontal"
		android:textColor="@color/black"
		android:textAppearance="@android:style/TextAppearance.Medium"
		android:drawablePadding="10dip"
		android:textSize="15pt"
		android:text="@string/alarm_text" />
	<ImageView
		android:src="@drawable/divider_black"
		android:layout_height="1dip"  
		android:layout_width="fill_parent"
		android:layout_marginTop="5dip"
		android:layout_marginBottom="5dip"/>
	<TextView 
		android:id="@+id/display_alarm_info_text_view" 
		android:layout_height="wrap_content"  
		android:layout_width="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:textColor="@color/black"
		android:textSize="20pt"
		android:text="" />
	<TextView 
		android:id="@+id/display_timer_info_text_view" 
		android:layout_height="wrap_content"  
		android:layout_width="fill_parent"
		android:gravity="center_vertical|center_horizontal"
		android:textColor="@color/black"
		android:textSize="10pt"
		android:text="" />
	<LinearLayout 
		android:id="@+id/alarm_buttons_linear_layout" 
		android:layout_height="wrap_content"
		android:layout_width="fill_parent" 
		android:orientation="horizontal"
		android:layout_marginTop="5dip"
		android:layout_gravity="center_horizontal" 
		android:padding="2dip" 
		android:gravity="center">
		<Button
			android:id="@+id/snooze_button"  
			android:layout_height="wrap_content"
			android:layout_width="120dip"
			android:layout_weight="1"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true"
			android:textColor="@color/black"
			android:background="@drawable/btn_pink"
			android:text="@string/snooze_text" />
		<Button
			android:id="@+id/dismiss_button"  
			android:layout_height="wrap_content"
			android:layout_width="120dip"
			android:layout_weight="1"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip"
			android:gravity="center_vertical|center_horizontal"
			android:hapticFeedbackEnabled="true"
			android:textColor="@color/black"
			android:background="@drawable/btn_pink"
			android:text="@string/dismiss_text" />	
	</LinearLayout>
</LinearLayout>